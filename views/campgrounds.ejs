<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelp-Camp</h1>
      <p>View our hand picked campgrounds all over the world</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        <a class="btn btn-info btn-large" href="/">Go Back</a>
      </p>
    </div>
  </header>

  <div class="row" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
      <% campgrounds.forEach((campground) => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>">
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<% include partials/footer %>